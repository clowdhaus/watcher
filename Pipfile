name = "pypi"

[packages]

[dev-packages]
boto3 = "~=1.12.11"
botocore = "~=1.15.11"
black = "*"
flake8 = "*"
isort = "*"
moto = "*"
mypy = "*"
pyflakes = "*"
pytest = "*"
